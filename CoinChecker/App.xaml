<Application x:Class="CoinChecker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:CoinChecker.ViewModels"
             xmlns:view="clr-namespace:CoinChecker.Views">
    <Application.Resources>
        <DataTemplate DataType ="{x:Type viewModel:DetailsViewModel}">
            <view:DetailsPage/>
        </DataTemplate>
        
        <DataTemplate DataType ="{x:Type viewModel:HomeViewModel}">
            <view:HomePage/>
        </DataTemplate>

        <DataTemplate DataType ="{x:Type viewModel:ExchangesViewModel}">
            <view:ExchangesPage/>
        </DataTemplate>
    </Application.Resources>
</Application>
