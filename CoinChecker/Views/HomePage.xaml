<UserControl x:Class="CoinChecker.Views.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoinChecker.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#252525">
    <Grid>
        <StackPanel Margin="20">

            <ListView ItemsSource="{Binding TopCurrencies}" Margin="0,20,0,0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ідентифікатор" DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn Header="Назва" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Символ" DisplayMemberBinding="{Binding Symbol}" />
                        <GridViewColumn Header="Ціна" DisplayMemberBinding="{Binding Price, StringFormat={}{0:C2}}" />
                        <GridViewColumn Header="Оборот за 24г" DisplayMemberBinding="{Binding VolumeUsd24Hr}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
